<UserControl x:Class="Projectile.View.UserControls.LevelSelecrorButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projectile.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="75*"/>
            </Grid.ColumnDefinitions>
            <Ellipse Grid.Column="0" Width="5" Height="5" Fill="#FFD5A8"/>
            <Label x:Name ="WrittenText"
                   Grid.Column="1"
                   Content="{Binding Textname}" 
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Foreground="#FFD5A8"
                   FontSize="23" 
                   Background="Transparent"
                   BorderThickness="0" 
                   FontFamily="Segoe Script"
                   />
        </Grid>
    </Grid>
</UserControl>
