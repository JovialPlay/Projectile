<Page x:Class="Projectile.View.Pages.ProjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:vm="clr-namespace:Projectile.ViewModel"
      xmlns:local="clr-namespace:Projectile.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProjectPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" Fill="#543407" Height="2" VerticalAlignment="Bottom"/>
        <Rectangle Grid.Row="0" Fill="#ffbf66" RadiusX="15" RadiusY="15" Opacity="0.7">
            <Rectangle.Effect>
                <BlurEffect Radius="20"/>
            </Rectangle.Effect>
        </Rectangle>
        <Label Content="Мои Проекты" Foreground="Black" FontFamily="Segoe Script" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Name="CreateButton" Content="Создать Проект" Command="{Binding CreateNewProject}" Margin="1 1 1 1"/>
        </Grid>
        <Grid Grid.Row="2" x:Name="ProjectsBar" Grid.Column="1" Margin="10 10 10 10">
            <ItemsControl x:Name="ProjectTemplate" Background="Transparent" ScrollViewer.CanContentScroll="True">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Margin="5 5 5 5" Columns="2"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="7 7 7 7">
                            <Button Command="{Binding ElementName=ProjectTemplate, 
                                    Path=DataContext.GoToBoards}"
                                    CommandParameter="{Binding}"
                                    Background="Transparent"
                                    Panel.ZIndex="1"/>
                            <Rectangle     
                                    RadiusX="10" 
                                    RadiusY="10" 
                                    Stroke="#000000"
                                    StrokeThickness="0.5"
                                    MinHeight="300"
                                    MinWidth="250"
                                    >
                                <Rectangle.Effect>
                                    <DropShadowEffect  ShadowDepth="4" BlurRadius="12" Color="#1C0E00"/>
                                </Rectangle.Effect>
                                <Rectangle.Fill>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#ffbf66"/>
                                        <GradientStop Color="#543407"  Offset="1.2"/>
                                    </LinearGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Rectangle Grid.Row="0"
                   Margin=" 7 7 7 7"
                   RadiusX="10" 
                   RadiusY="10"
                   Fill="#FFFFFF" 
                   StrokeThickness="0"
                   />
                                <Label 
            Grid.Row="0"
            x:Name="ProjectLabel"
            Style="{StaticResource ButtonFont}"
            Margin="5 5 5 0"
            Content="{Binding Path=Name}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            />
                                <Rectangle Grid.Row="1"
                    Margin="5 2 5 5"
       RadiusX="10" 
       RadiusY="10"
       Fill="#FFFFFF" 
       StrokeThickness="0"
       />
                                <Label 
            Grid.Row="1"
            x:Name="ProjectDescriptionl"
            Style="{StaticResource ButtonFont}"
            Margin="7 7 7 7"
            Content="{Binding Path=Description}"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            />
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>
</Page>
